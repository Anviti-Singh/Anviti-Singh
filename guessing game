word = "newspaper"
guess = " "
count = 0
limit = 3
out_of_guess = False
while guess != word and not (out_of_guess):
     if count < limit :
        guess = input ("Enter your guess : ")
        count += 1
     else :
        out_of_guess = True

if out_of_guess :
    print ("Out of guesses \n You lose")
else :
    print ("You win ! ")
